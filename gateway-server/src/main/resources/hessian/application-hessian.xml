<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">  
<beans>  
    <!-- 接口的具体实现类 -->  
    <!-- 使用Spring的HessianServie做代理 -->  
    <bean name="/helloSpring"   class="org.springframework.remoting.caucho.HessianServiceExporter">  
        <!-- service引用具体的实现实体Bean-->  
        <property name="service" value="com.gateway.service.UserServiceImpl" />  
        <property name="serviceInterface" value="com.gateway.service.IUserService" />  
    </bean>  
</beans>  